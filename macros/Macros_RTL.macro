.macro PrintStringConst(Str) {
    PrintStringAddr(StrData)
    JMP continue
StrData:
    .byte Str
continue:
}

.macro PrintStringAddr(Addr) {
    LDA #<Addr
    LDY #>Addr
    PrintStringAY()
}

.macro PrintStringAY() {
;store address in zero-page
    STA $FB
    STY $FB + 1
    LDY #$00
loop:
    LDA ($FB),Y
    BEQ continue
    JSR $FFD2
    INY
    JMP loop
continue:
}